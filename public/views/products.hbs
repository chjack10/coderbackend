{{#each products}}
  <div class='card mb-3'>
    <div class='row no-gutters'>
      <div class='col-md-4'>
        <img src='{{thumbnail}}' class='card-img' alt='{{title}}' />
      </div>
      <div class='col-md-8'>
        <div class='card-body'>
          <h5 class='card-title'>{{title}}</h5>
          <p class='card-text'>${{price}}</p>
        </div>
      </div>
    </div>
  </div>
{{/each}}